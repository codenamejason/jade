extends ../reference.jade

block documentation
  h1 {{comments-title}}

  p {{comments-single-line}}

  .row(data-control='interactive')
    .col-lg-6
      +jade
        :jadesrc
          // just some paragraphs
          p foo
          p bar
    .col-lg-6
      +html
        :htmlsrc
          <!-- just some paragraphs -->
          <p>foo</p>
          <p>bar</p>

  p {{unubuffered-comments}}

  .row(data-control='interactive')
    .col-lg-6
      +jade
        :jadesrc
          //- will not output within markup
          p foo
          p bar
    .col-lg-6
      +html
        :htmlsrc
          <p>foo</p>
          <p>bar</p>

  h2 {{bock-comments}}

  p {{block-comments-description}}

  .row(data-control='interactive')
    .col-lg-6
      +jade
        :jadesrc
          body
            //
              As much text as you want
              can go here.
    .col-lg-6
      +html
        :htmlsrc
          <body>
            <!--
            As much text as you want
            can go here.
            -->
          </body>

  h2 {{conditional-comments}}

  p {{conditional-comments-description}}

  .row(data-control='interactive')
    .col-lg-6
      +jade
        :htmlsrc
          <!--[if IE 8]>
          <html lang="en" class="lt-ie9">
          <![endif]-->
          <!--[if gt IE 8]><!-->
          <html lang="en">
          <!--<![endif]-->
    .col-lg-6
      +html
        :htmlsrc
          <!--[if IE 8]>
          <html lang="en" class="lt-ie9">
          <![endif]-->
          <!--[if gt IE 8]><!-->
          <html lang="en">
          <!--<![endif]-->
