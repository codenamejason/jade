extends ../reference.jade

block documentation
  h1 {{iteration-title}}

  p {{iteration-description}}

  h2 each

  p {{each-description}}

  .row(data-control='interactive')
    .col-lg-6
      +jade
        :jadesrc
          ul
            each val in [1, 2, 3, 4, 5]
              li= val
    .col-lg-6
      +html
        :htmlsrc
          <ul>
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
            <li>5</li>
          </ul>

  p {{each-index}}

  .row(data-control='interactive')
    .col-lg-6
      +jade
        :jadesrc
          ul
            each val, index in ['zero', 'one', 'two']
              li= index + ': ' + val
    .col-lg-6
      +html
        :htmlsrc
          <ul>
            <li>0: zero</li>
            <li>1: one</li>
            <li>2: two</li>
          </ul>

  p {{each-object}}

  .row(data-control='interactive')
    .col-lg-6
      +jade
        :jadesrc
          ul
            each val, index in {1:'one',2:'two',3:'three'}
              li= index + ': ' + val
    .col-lg-6
      +html
        :htmlsrc
          <ul>
            <li>1: one</li>
            <li>2: two</li>
            <li>3: three</li>
          </ul>

  p {{each-javascript}}


  .row(data-control='interactive')
    .col-lg-6
      +jade
        :jadesrc
          - var values = [];
          ul
            each val in values.length ? values : ['There are no values']
              li= val
    .col-lg-6
      +html
        :htmlsrc
          <ul>
            <li>There are no values</li>
          </ul>

  p {{each-for}}

  h2 while

  p {{while-description}}

  .row(data-control='interactive')
    .col-lg-6
      +jade
        :jadesrc
          - var n = 0
          ul
            while n < 4
              li= n++
    .col-lg-6
      +html
        :htmlsrc
          <ul>
            <li>0</li>
            <li>1</li>
            <li>2</li>
            <li>3</li>
          </ul>
